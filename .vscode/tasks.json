{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make: test",
      "type": "shell",
      "command": "make",
      "args": ["test"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "problemMatcher": ["$gcc", "$msCompile"]
    },

    /* optional: general helpers */
    {
      "label": "make: all",
      "type": "shell",
      "command": "make",
      "args": ["all"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "problemMatcher": ["$gcc", "$msCompile"]
    },
    {
      "label": "make: clean",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "none"
    }
  ]
}
